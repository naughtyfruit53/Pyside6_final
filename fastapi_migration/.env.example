# Environment Configuration for TRITIQ ERP API
# Copy this file to .env and update the values

# === Database Configuration ===
DATABASE_URL=sqlite:///./tritiq_erp.db
# For PostgreSQL/Supabase, use:
# DATABASE_URL=postgresql://user:password@host:port/database
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key
# SUPABASE_SERVICE_KEY=your-service-role-key

# === Security ===
SECRET_KEY=your-secret-key-here-change-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === Email Configuration (Brevo/Sendinblue) ===
# Primary email service - get API key from https://app.brevo.com/
BREVO_API_KEY=your-brevo-api-key-here
BREVO_FROM_EMAIL=noreply@yourcompany.com
BREVO_FROM_NAME=TRITIQ ERP

# === Email Configuration (Fallback SMTP) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=TRITIQ ERP

# === Email Configuration (Alternative - SendGrid) ===
# SENDGRID_API_KEY=your-sendgrid-api-key

# === Redis (Optional) ===
REDIS_URL=redis://localhost:6379

# === File Storage ===
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760

# === CORS ===
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]

# === Super Admin Configuration ===
SUPER_ADMIN_EMAILS=["admin@tritiq.com","superadmin@tritiq.com","your-admin@yourcompany.com"]

# === Application Settings ===
DEBUG=true
PROJECT_NAME=TRITIQ ERP API
VERSION=1.0.0
DESCRIPTION=FastAPI migration of PySide6 ERP application
API_V1_STR=/api