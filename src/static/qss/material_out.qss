QTableWidget {
    border: 1px solid #ccc;
    background-color: #ffffff;
    gridline-color: #e0e0e0;
}

QTableWidget::item {
    padding: 5px;
}

QHeaderView::section {
    background-color: #f5f5f5;
    border: 1px solid #ccc;
    padding: 5px;
    font-weight: bold;
}

QPushButton {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #45a049;
}

QLabel {
    color: #333333;
}